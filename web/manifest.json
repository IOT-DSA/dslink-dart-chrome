{
  "name": "DSLink",
  "version": "1",
  "minimum_chrome_version": "40",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "alarms",
    { "fileSystem": ["write", "retainEntries", "directory"] },
    "idle",
    "identity",
    "storage",
    "syncFileSystem",
    "system.cpu",
    "system.memory",
    { "socket" : ["tcp-connect", "tcp-listen"] },
    "tts"
  ]
}
